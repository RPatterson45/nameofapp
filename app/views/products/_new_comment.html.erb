<% if signed_in? %>
	<p class="show"><strong>Add a review:</strong></p>
	<%= form_for([@product, @product.comments.build]) do |f| %>
		<p class="comment-area">
			<%= f.label :body, "Comments" %><br>
			<%= f.text_area :body %>
		</p>
		<p>
			<div class="rating"></div>
		</p>
		<p>
			<%= f.submit "Submit" %>
		</p>
	<% end %>
<% end %>